# OpenAI API Configuration (Optional - kostenpflichtig)
OPENAI_API_KEY=your_openai_api_key_here

# Ollama Configuration (KOSTENLOS - lokale KI!)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# RSS Feed URLs - Fokus auf wichtigste Breaking News Quellen
RSS_FEEDS=https://feeds.reuters.com/Reuters/PoliticsNews,https://rss.cnn.com/rss/edition.rss,https://www.theguardian.com/world/rss,https://feeds.bbci.co.uk/news/world/rss.xml,https://rss.nytimes.com/services/xml/rss/nyt/World.xml

# AI Model Selection: 'openai' oder 'ollama' (für kostenlos verwenden Sie 'ollama')
AI_MODEL_TYPE=ollama

# OpenAI Model Name (nur wenn openai verwendet wird)
OPENAI_MODEL=gpt-3.5-turbo

# Maximum number of articles to process (Erhöht um keine wichtigen News zu verlieren)
MAX_ARTICLES=75

# Mobile Notification Settings (Pushbullet)
ENABLE_MOBILE_NOTIFICATIONS=true
NOTIFICATION_THRESHOLD=7.5
PUSHBULLET_API_KEY=o.eCeopl8xSKzkmSLHRWYmboHMHsrOEdhO

# GUI Settings
ENABLE_GUI=true
